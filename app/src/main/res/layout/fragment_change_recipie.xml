<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.change_recipie.ChangeRecipieFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_favourite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <!--     Ezt az imageView-t majd le kell cserelni gombra a kepfeltolteshez -->
            <ImageView
                android:id="@+id/iv_recipie_add_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_recipie_photo" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4BCCCCCC"
                android:textColor="#90000000"
                android:paddingTop="16dp"
                android:textStyle="italic"
                android:text="@string/tv_recipie_category" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cg_recipie_flags">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/chip_recipie_flag_desserts"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/chip_recipie_flag_main_courses"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/chip_recipie_flag_soups"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/chip_recipie_flag_drinks"/>

            </com.google.android.material.chip.ChipGroup>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4BCCCCCC"
                android:textColor="#90000000"
                android:paddingTop="16dp"
                android:textStyle="italic"
                android:text="@string/tv_recipie_time_info" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_recipie_time"
                android:drawablePadding="8dp"
                android:text="@string/tv_recipie_time" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_recipie_serving"
                android:drawablePadding="8dp"
                android:text="@string/tv_recipie_abundance" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#90000000"
                android:background="#4BCCCCCC"
                android:paddingTop="16dp"
                android:textStyle="italic"
                android:text="@string/tv_recipie_ingredients" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recipie_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/adding_btn_recipie_ingredients"
                app:icon="@drawable/ic_add"
                app:iconTint="@android:color/white"
                android:text="@string/btn_add_new_ingredient"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/purple_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4BCCCCCC"
                android:textColor="#90000000"
                android:paddingTop="16dp"
                android:textStyle="italic"
                android:text="@string/tv_recipie_preparation" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recipie_preparation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<!--            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton-->
<!--                android:id="@+id/adding_btn_recipie_preparation"-->
<!--                app:icon="@drawable/ic_add"-->
<!--                app:iconTint="@android:color/white"-->
<!--                android:text="@string/btn_add_new_step"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="end|bottom"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:layout_marginBottom="8dp"/>-->

<!--            <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--                android:id="@+id/adding_btn_recipie_preparation"-->
<!--                android:src="@drawable/ic_add"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

            <!--            <ListView-->
            <!--                android:id="@+id/lv_recipie_preparation"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content" />-->


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_change_recipie_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:text="@string/change_recipie_fragment_recipiename"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/img_btn_favourite"
        app:layout_constraintStart_toEndOf="@+id/img_btn_delete"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/img_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_recipie_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_recipie_favorite_border"
        app:layout_constraintEnd_toStartOf="@+id/img_btn_edit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_recipie_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>