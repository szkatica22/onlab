<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="8dp"
    tools:context=".ui.flag.FlagFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_photo"
            android:src="@drawable/ic_recipie_photo"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:tint="@color/GreenprimaryColor" />
        <TextView
            android:id="@+id/tv_recipie_name_id"
            android:text="@string/tv_change_recipie_item_title"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
        <ImageView
            android:id="@+id/iv_recipies_flag"
            android:src="@drawable/ic_arrow"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:tint="@color/design_default_color_on_secondary" />
    </LinearLayout>

</androidx.cardview.widget.CardView>