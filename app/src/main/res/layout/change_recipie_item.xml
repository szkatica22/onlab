<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="8dp"
    tools:context=".ui.change_recipie.ChangeRecipieFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_change_recipie_item_title_id"
            android:text="@string/tv_change_recipie_item_title"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
        <ImageView
            android:id="@+id/iv_change_recipie_options"
            android:src="@drawable/ic_change_recipie_more"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_width="34dp"
            android:layout_height="34dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>