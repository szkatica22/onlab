<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            This is a dummy Theme extending from The Default Android Theme
            This will not be used in this tutorial but would be useful in defining the properties you would
            want as common in all the themes.
         -->
    </style>
    <!--    Red Theme Colors -->
    <style name="AppTheme.Red" parent="AppTheme">
        <item name="colorPrimary">@color/RedprimaryColor</item>
        <item name="colorPrimaryDark">@color/RedprimaryDarkColor</item>
        <item name="colorSecondary">@color/RedsecondaryColor</item>
        <item name="colorAccent">@color/RedsecondaryDarkColor</item>
        <item name="android:textColor">@color/RedsecondaryTextColor</item>
    </style>

    <!--    Orange Theme Colors -->
    <style name="AppTheme.Orange" parent="AppTheme">
